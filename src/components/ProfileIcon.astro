---
import members from "@data/members.json";

const { name } = Astro.props;
if (!name) return null;

const member = members[name as keyof typeof members];
if (!member) return null;

// biome-ignore lint/correctness/noUnusedVariables: used in template
const { displayName, link = null, image = null } = member;
// biome-ignore lint/correctness/noUnusedVariables: used in template
const firstChar = displayName.charAt(0).toUpperCase();
---

{link ? (
  <a href={link} target="_blank" rel="noopener noreferrer" class="profile-icon">
    <div class="icon-container">
      {image ? (
        <img src={image} alt={displayName} class="icon-image" />
      ) : (
        <div class="name-display">{firstChar}</div>
      )}
    </div>
    <div class="icon-name">{displayName}</div>
  </a>
) : (
  <div class="profile-icon">
    <div class="icon-container">
      {image ? (
        <img src={image} alt={displayName} class="icon-image" />
      ) : (
        <div class="name-display">{firstChar}</div>
      )}
    </div>
    <div class="icon-name">{displayName}</div>
  </div>
)}

<style>
  .profile-icon {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    margin: 1rem;
  }

  .icon-container {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    padding: 4px;
  }

  .icon-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .name-display {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    color: #333;
  }

  .icon-name {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    text-align: center;
    color: var(--sl-color-white);
  }
</style>
